# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 180
tab_width = 2
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.md]
max_line_length = off # handled by markdownlint
