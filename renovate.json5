{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  automerge: true,
  major: {
    automerge: false,
  },
  minimumReleaseAge: '3 days',
  rebaseWhen: "behind-base-branch",
  packageRules: [
    {
      matchDepNames: [
        'ghcr.io/home-assistant/home-assistant'
      ],
      major: {
        automerge: true,
      }
    },
    {
      matchDepNames: [
        'base'
      ],
      "allowedVersions": "<=1.21.2"
    },
    {
      matchDepNames: [
        'gateway'
      ],
      "allowedVersions": "<=1.21.2"
    },
    {
      matchDepNames: [
        'istiod'
      ],
      "allowedVersions": "<=1.21.2"
    }
  ],
}
